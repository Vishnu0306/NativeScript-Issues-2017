
<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:dd="nativescript-drop-down" navigatingTo="navigatingTo" class="page">

    <StackLayout class="p-20">
        <Label text="Tap the button" class="h1 text-center"/>
        <Button text="changeStyles" tap="changeStyles" class="btn btn-primary btn-active"/>
        <Label text="{{ message }}" class="{{ cssClass }}" textWrap="true"/>
        <dd:DropDown id="dd" hint="{{ hint }}" items="{{ items }}" selectedIndex="{{ selectedIndex }}" 
                  opened="dropDownOpened" closed="dropDownClosed" selectedIndexChanged="dropDownSelectedIndexChanged" 
                  class="{{ cssClass }}" isEnabled="{{ isEnabled }}"
                  row="0" colSpan="2" /> 
    </StackLayout>
</Page>
