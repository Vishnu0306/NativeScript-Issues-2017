<Page xmlns:lv="nativescript-telerik-ui-pro/listview" loaded="pageStoriesPagesLoaded" shownModally="pageStoriesPagesShownModally" class="page">
	<GridLayout rows="3*, *" className="modal-page">
		<!--
		<lv:lv:RadListView row="1" id="listView" items="{{ dataItems }}" loaded="onRadListLoaded" itemLoading="onItemLoading" itemTap="selectPage" selectionBehavior="None">
		<lv:lv:RadListView.listViewLayout>
		<lv:lv:ListViewLinearLayout scrollDirection="Vertical" />
		</lv:lv:RadListView.listViewLayout>
		<lv:lv:RadListView.itemTemplate>
		<StackLayout>
		<Label text="{{ 'Seite ' + itemName }}" className="list-item" />
		</StackLayout>
		</lv:lv:RadListView.itemTemplate>
		</lv:lv:RadListView>
		-->
		<GridLayout row="0" orientation="vertical" rows="auto, *, auto">
			<lv:RadListView id="listView" backgroundColor="transparent" items="{{ dataItems }}" row="1" loaded="onRadListLoaded" itemLoading="onItemLoading" selectionBehavior="Press" itemSelected="onItemSelected" itemDeselected="onItemDeselected">
				<lv:RadListView.listViewLayout>
					<lv:ListViewLinearLayout scrollDirection="Vertical" />
				</lv:RadListView.listViewLayout>
				<lv:RadListView.itemTemplate>
					<StackLayout orientation="vertical" paddingLeft="16" class="rlv-item">
						<Label fontSize="20" text="{{ itemName }}" />
						<Label fontSize="13" text="{{ itemEmail }}" />
					</StackLayout>
				</lv:RadListView.itemTemplate>
			</lv:RadListView>
			<Label id="txtSelection" textWrap="true" row="2" />
		</GridLayout>
		<AbsoluteLayout row="1" className="fab-center">
			<Label text="LiustView in ModalPage" textWrap="true" /> 
		</AbsoluteLayout>
	</GridLayout>
</Page>
